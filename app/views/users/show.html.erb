<div class="row">
  <aside class="col-sm-4">
    <div>
    <h2 class="text-center"><%= @user.name %></h2>
    </div>
    <div>
      <p class="text-center"><%= simple_format(@user.introduction) %></p>
    </div>
    <div>
      <%= link_to 'プロフィール編集', edit_user_path(@user), class: 'btn btn-primary' %>
    </div>
    
  </aside>
  <div class="col-sm-8">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Favorite Rooms <span class="badge badge-secondary"><%= @count_likes %></span> </h3>
      </div>
      <div class="card-body">
        <%= render 'rooms/rooms', rooms: @likes %>
      </div>
    </div>
  </div>
</div>