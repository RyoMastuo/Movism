<ul class="list-unstyled p-3">
  <% rooms.each do |room| %>
    <li class="block border border-dark rounded mb-4">

      <div class="offset-sm-3">
        <div class="text-left d-flex align-items-center">
          <h2><%= link_to room.name, room  %></h2>
          <p class="mb-0 ml-2"><%= room.user.name %></p>
        </div>
        <div class="text-left">
          <h4><%= simple_format(room.introduction) %></h4>
        </div>
        <div class="d-flex">
          <% if current_user == room.user %>
          <%= link_to "Update", edit_room_path(room.id), class: 'btn btn-success'%>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  
</ul>